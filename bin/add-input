#! /bin/bash

self=$(cd $(dirname $0); pwd)
git_dir=${self%/bin}

(cd "$git_dir" && git rebase)

[ -z "$1" ] && set input

for src in "$@"; do 
    if [ ! -f "$src" ]; then
	echo "No such file $src" >&2
	continue
    fi

    sha1=$(sha1sum "$src" | cut -c1-40)

    dir=$(cd $(dirname "$src"); pwd)
    src=$dir/$(basename "$src")

    day=$(printf "%02d" $[10#"$(basename $dir)"])
    year=$(printf "%04d" $[10#"$(basename $(dirname "$dir"))"])

    dst_dir="$git_dir/$year/$day"
    dst_file="$dst_dir/input-$sha1"

    if [ ! -f "$dst_file" ]; then
	mkdir -p "$dst_dir"
	cp -va "$src" "$dst_file"
    fi

    (
	file="$year/$day/input-$sha1"
	cd "$git_dir" && (
	    git add "$file"
	    git commit -m "Added $file" "$file"
	)
    )
done

cd "$git_dir" && git push
